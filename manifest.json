{
  "manifest_version": 3,
  "name": "財報紅綠燈 to Gemini",
  "description": "在使用者操作下，將頁面中可見的財報資料傳送至 Gemini AI 進行分析",
  "version": "1.0",
  "author": "財報紅綠燈開發團隊",
  "homepage_url": "https://gd.myftp.org",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["storage",  "contextMenus"],
  "options_page": "options.html",
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://gd.myftp.org/lb/*"],
      "js": ["source_content.js"]
    },
    {
      "matches": [
        "https://gemini.google.com/*",
        "https://chatgpt.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.png", "gpticon.png"],
      "matches": [
        "https://gd.myftp.org/*"
      ]
    }
  ]
}
